[Unit]
Description=CinePulse docker compose stack
After=network-online.target docker.service
Wants=network-online.target

[Service]
Type=oneshot
WorkingDirectory=/root/cinepulse        # <- adjust if your repo lives elsewhere
ExecStart=/usr/bin/docker compose -f infra/docker-compose.yml -f infra/compose.override.yml up -d
ExecStop=/usr/bin/docker compose -f infra/docker-compose.yml -f infra/compose.override.yml down
RemainAfterExit=yes
TimeoutStartSec=0

[Install]
WantedBy=multi-user.target
