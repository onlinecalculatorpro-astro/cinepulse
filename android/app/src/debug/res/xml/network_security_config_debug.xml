<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- Allow cleartext ONLY to local/dev endpoints in debug -->
    <domain-config cleartextTrafficPermitted="true">
        <domain includeSubdomains="true">localhost</domain>
        <domain includeSubdomains="true">10.0.2.2</domain>   <!-- Android emulator host -->
        <domain includeSubdomains="true">127.0.0.1</domain>
        <!-- If you must hit a specific http IP during debug, add it here: -->
        <!-- <domain includeSubdomains="true">72.60.218.209</domain> -->
    </domain-config>
</network-security-config>
